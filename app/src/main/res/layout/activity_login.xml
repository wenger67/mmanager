<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img_login_bg"
    android:layout_height="match_parent">
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_width="8dp"
               android:layout_height="45dp"
               android:background="#2fa881"/>
           <com.google.android.material.textview.MaterialTextView
               android:layout_marginTop="10dp"
               android:id="@+id/tv_login"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_width="wrap_content"
               android:layout_height="45dp"
               android:layout_marginStart="50dp"
               android:text="LOGIN"
               android:gravity="center"
               android:textSize="18sp"
               android:textStyle="bold"
               android:textColor="#ffcc00"/>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginTop="10dp"
               android:id="@+id/til_phone"
               app:layout_constraintTop_toBottomOf="@+id/tv_login"
               app:layout_constraintLeft_toLeftOf="parent"
               android:paddingStart="50dp"
               android:paddingEnd="30dp"
               android:textColorHint="#c5c5c5">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#2fa881"
                    android:paddingBottom="2dp"
                    android:id="@+id/et_phone"
                    android:hint="PhoneNumber"
                    android:inputType="phone"
                    android:background="@drawable/login_selector_bg_edit"
                    android:textCursorDrawable="@drawable/login_bg_input_cursor"/>
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@+id/til_phone"
               app:layout_constraintLeft_toLeftOf="parent"
               android:id="@+id/til_password"
               android:paddingStart="50dp"
               android:paddingEnd="30dp"
               android:textColorHint="#c5c5c5">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textColor="#2fa881"
                   android:paddingBottom="2dp"
                   android:id="@+id/et_pass"
                   android:hint="Password"
                   android:inputType="phone"
                   android:background="@drawable/login_selector_bg_edit"
                   android:textCursorDrawable="@drawable/login_bg_input_cursor"/>
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="160dp"
               android:layout_height="50dp"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@+id/til_password"
               app:layout_constraintLeft_toLeftOf="parent"
               android:id="@+id/til_captcha"
               android:paddingStart="20dp"
               android:paddingEnd="20dp"
               android:textColorHint="#c5c5c5">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textColor="#2fa881"
                   android:paddingBottom="2dp"
                   android:id="@+id/et_captcha"
                   android:hint="验证码"
                   android:inputType="phone"
                   android:background="@drawable/login_selector_bg_edit"
                   android:textCursorDrawable="@drawable/login_bg_input_cursor"/>
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/iv_captcha"
               app:layout_constraintLeft_toRightOf="@id/til_captcha"
               app:layout_constraintTop_toBottomOf="@id/til_password"
               android:layout_marginTop="10dp"
               android:layout_width="120dp"
               android:layout_height="50dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Enter"
                android:textColor="#d3d3d3"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/til_captcha"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/login_bt_shape"
                android:id="@+id/btn_enter"
                android:stateListAnimator="@drawable/login_state_list_animator_z"/>
           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_forget"
               android:textSize="12sp"
               android:textColor="#9a9a9a"
               android:layout_marginTop="5dp"
               app:layout_constraintTop_toBottomOf="@id/btn_enter"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:text="forget password ?"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/cv"
        android:transitionName="loginFab"
        android:src="@mipmap/login_plus"
        app:layout_constraintLeft_toLeftOf="@id/cv"
        android:layout_marginStart="268dp"
        android:id="@+id/fab"/>


</androidx.constraintlayout.widget.ConstraintLayout>