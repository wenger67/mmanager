<?xml version="1.0" encoding="utf-8"?>
<com.luck.picture.lib.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@color/colorPrimaryDark"
        android:contentDescription="@null" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img"
        android:layout_alignEnd="@id/img"
        android:scaleType="centerInside"
        app:iiv_icon="cmd_delete_circle"
        app:iiv_size="@dimen/icon_size_24dp"
        app:iiv_corner_radius="12dp"
        app:iiv_background_color="@color/colorGreyAlpha"
        app:iiv_color="@color/colorWhiteAlpha"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignStart="@id/img"
        android:layout_alignEnd="@id/img"
        android:layout_alignBottom="@id/img"
        android:background="@drawable/picture_icon_shadow_bg"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:paddingTop="8dp"
        android:text="00:00"
        android:textColor="@color/md_white_1000"
        android:textSize="11sp"
        android:visibility="gone"
        tools:visibility="visible"
        app:drawableStartCompat="@drawable/picture_icon_video" />
</com.luck.picture.lib.widget.SquareRelativeLayout>